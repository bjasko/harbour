OBJ_EXT = .obj
EXE_EXT = .exe
LIB_PREF =
LIB_EXT = .lib

CC = cl.exe
CC_IN = -c
CC_OUT = -Fo
CPPFLAGS = -DDEBUG -I. -I$(HB_INC_DIR)
CFLAGS = -W0 -Zi  # -W4 for max warnings

LD = cl.exe
LD_OUT = -Fe
ifdef HB_LIB_DIR
LDFLAGS += -link -LIBPATH:$(HB_LIB_DIR)
endif
LINKLIBS = $(foreach lib, $(LIBS), $(lib)$(LIB_EXT))

AR = lib.exe
ARFLAGS =
AR_RULE = $(AR) $(ARFLAGS) /out:$@ $^ || $(RM) $@

include $(TOP)$(ROOT)config/rules.cf
